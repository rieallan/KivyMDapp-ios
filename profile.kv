#:kivy !
<ProfileScreen>:
    MDScreen:
        name: "profile"
        id: profile
        MDFloatLayout:
            md_bg_color: 1,1,1,1
            MDIconButton:
                icon: "arrow-left"
                pos_hint: {"center_y": .95}
               user_font_size: "30sp"
               theme_text_color: "Custom"
               text_color: rgba(26,24,58,255)
               on_release:
                   root.manager.transition.direction = "right"
                   root.manager.current = "main"
           MDLabel:
               text: "W e l c o m e !"
               font_name: "BPoppins"
               font_size: "26sp"
               pos_hint: {"center_x":.5,"center_y":.85}
               halign: "center"
               color: rgba(0,0,59,255)
           MDLabel:
               text: "Crystal"
               font_name: "MPoppins"
               font_size: "18sp"
               pos_hint: {"center_x":.5,"center_y":.79}
               halign: "center"
               color: rgba(135,133,193,255)
           MDLabel:
               text: "Please enter the number of Accounts you would like to monitor"
               font_name: "MPoppins"
               font_size: "18sp"
               pos_hint: {"center_x":.5,"center_y":.79}
               halign: "center"
               color: rgba(135,133,193,255)
               pos_hint: {"center_x":.5,"center_y":.5}
               TextInput:
                   id: number
                   hint_text: "Number"
                   font_name: "MPoppins"
                   size_hint_y: .75
                   pos_hint: {"center_x":.43,"center_y":.5}
                   background_color: 1,1,1,0
                   foreground_color: rgba(0,0,59,255)
                   cursor_color: rgba(0,0,59,255)
                   font_size: "14sp"
                   cursor_widthL: "2sp"
                   multiline: False
                   number: True
   
   